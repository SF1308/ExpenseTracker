{
    "compilerOptions": {
      "target": "ES2020",       
      "module": "ES2022",       
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "moduleDetection": "force"  
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }